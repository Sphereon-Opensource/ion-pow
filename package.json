  "version": "0.2.0-unstable.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.main.json",
    "test": "run-s build test:* cov",
    "test:lint": "eslint . --ext .ts",
    "test:prettier": "prettier \"{lib,test}/**/*.ts\" --list-different",
    "test:unit": "jest",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"{lib,test}/**/*.ts\" --write",
    "fix:lint": "eslint . --ext .ts --fix",
    "cov": "jest --coverage"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "debug": "^4.1.1",
    "hash-wasm": "^4.9.0",
    "uint8arrays": "^3.1.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/jest": "^28.1.6",
    "@types/node": "^14.18.23",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "nock": "^13.2.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  },
  "files": [
    "dist/**/*",
    "lib/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
